@model List<Internet_shop.Models.Magazine>

<div class="row">

    @foreach (var product in Model)
    {
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card">
                <img width="200px" height="200px" class="card-img-top" src="@product.PicturePath" alt="Card image">
                <div class="card-body">
                    <a href="@product.Site" class="card-title">@product.Name</a>
                    <p class="card-text">@product.Price</p>
                    <a href="/Home/ConcrectItemBuy/@product.Id" class="btn btn-primary">Buy</a>
                </div>
            </div>
        </div>
    }

